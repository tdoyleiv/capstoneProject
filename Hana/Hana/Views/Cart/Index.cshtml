@using System.Diagnostics.Eventing.Reader
@using System.Globalization
@model Hana.ViewModels.CartViewModel
@{
    ViewBag.Title = "Store Checkout";
    CultureInfo us = new CultureInfo("en-us");
}

<h3 class="text-center">
    <span><img src="~/Content/" />Your shopping cart:</span>
</h3>

<div id="update-message" class="text-info"></div>
@if (Model.Contents.Count==0)
{
    <a class="btn-danger" href="~/StoreFront/Index/1">Your shopping cart is empty</a>
}
else
{
    <table class="table-responsive table-bordered table-striped">
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Price (each)
            </th>
            <th>
                Quantity
            </th>
            <th>Subtotal</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Contents)
        {
            <tr id="row-@item.ProductID">
                <td>
                    @Html.ActionLink(item.Product.ProductName, "Details", "Products", new { id = item.ProductID }, null)
                </td>
                <td>
                    @item.Product.Price
                </td>
                <td id="item-count-@item.ProductID">
                    @item.Count
                </td>
                <td>
                    @((item.Product.Price*item.Count).ToString("c", us))
                </td>
                <td>
                    <a href="" class="RemoveLink" data-id="@item.ProductID">Remove from cart</a>
                </td>
            </tr>
        }
        <tr>
            <td>
                Total
            </td>
            <td></td>
            <td></td>
            <td id="cart-total" class="text-success">
                <b>@Model.CartTotal.ToString("c", us)</b>
            </td>
        </tr>
    </table>

    <p class="button">
        <a href="~StoreFront/Index/1">Continue shopping</a>
    </p>
    <p class="button">
        @Html.ActionLink("Checkout>> ", "AddressAndPayment", "Checkout")
    </p>
}

