@model Hana.Models.ProductType

@{
    ViewBag.Title = "Administrator Product Editor";
}
<div class="col-md-12" style="padding-top: 15vh">
    <h2>Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Category</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.ProductTypeID)

            <div class="form-group">
                @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "col-md-2 control-label pull-left", @style = "text-align: left" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>